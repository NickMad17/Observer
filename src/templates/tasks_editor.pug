.task-editor__container 
    h2.task-editor__title Задание
    .task-editor__works-box 
        .task-editor__works
            if context.taskCountMode
                - let count = 1
                while count <= 8
                    input.task-editor__work(type="radio" value=`${count}` name="work" id=`${count}` checked= count === Number(context.taskNumber))
                    label.task-editor__work-label(for=`${count}`)= count
                    - count += 1;
                input.task-editor__work(type="radio" value="Теория" name="work" id="work-teory" checked="theory" === context.taskNumber)
                label.task-editor__work-label(for="work-teory") Теория
            else
                -let countFore = 1
                while countFore <= 4
                    input.task-editor__work(type="radio" value=`${countFore}` name="work" id=`${countFore}` checked= countFore === Number(context.taskNumber))
                    label.task-editor__work-label(for=`${countFore}`)= countFore
                    - countFore += 1;
                div.task-editor__work-plus +
                input.task-editor__work(type="radio" value="Теория" name="work" id="work-teory" checked="theory" === context.taskNumber)
                label.task-editor__work-label(for="work-teory") Теория

        button(class= context.submitTasks ? "task-editor__button-sent" : "task-editor__button")#send-task= context.submitTasks ? "Отправлено" : "Отправить"                    
    .task-editor__area#task-area
            
.task-editor__notion.notion
    .notion__box
        h2.notion__title Импорт
        input.notion__input(type="text" placeholder="Вставьте ссылку на Notion")#notion-input
            
        if context.notionError 
                p.notion__error Ошибка импорта
        else
            button(class= context.isNotion ? "notion__btn-sent" : "notion__btn")#notion-btn= context.isNotion ? "Запрос отправлен" : context.isNotion === null ? "Загрузка..." : "Импорт"
